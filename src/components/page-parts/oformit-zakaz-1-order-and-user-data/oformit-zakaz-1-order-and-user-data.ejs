        <label for="message" class="forma-title">Комментарий к заказу</label>
        <label for="message" class="custom-textarea">
          <span class="custom-textarea__resizer"></span>
          <textarea id="message" placeholder="Комментарий к заказу" rows="5" maxlength="500" class="custom-scrollbar"></textarea>
        </label>
      </form>
    </div>
  </div>
</div>