<%- include('./templates/header.ejs', { base_url: "./" })%>
  <main style="position: relative; height: 900px;background-color: blue; overflow-y: hidden;">
    <div class="top_page_block" data-header-backdrop-color="var(--blue)">
      <script>
        /*указываем цвет подкладки хедера опираясь на data-header-backdrop-color атрибут первого блока*/
        (() => {
          let top_page_block = document.querySelector(".top_page_block"),/*первый контент блок на странице сразу после хедера*/
            header_backdrop = document.getElementById("header_backdrop");/*элемент #header_backdrop*/
          header_backdrop.style.backgroundColor = top_page_block.getAttribute("data-header-backdrop-color");
        })();
      </script>
    </div>
  </main>
  <%- include('./templates/footer.ejs', { base_url: "./" })%>